{% extends "index" %}

{% block content %}

    <div class="px-[5vw] sm:px-[8vw] py-[2vh]">

        <h1 class="">{{entry.title}}</h1>
        
        {% for block in entry.artikelNewsfeed.all() %}
            {% if block.type == "heading" %}
                <h3>{{ block.heading }}</h3>
            {% elseif block.type == "text" %}
                {{ block.text|markdown }}
            {% elseif block.type == "bild" %}
                {% set image = block.bild.one() %}
                {% if image %}
                    <img src="{{ image.getUrl('bildArtikel') }}" 
                        width="{{ image.getWidth('bildArtikel') }}" 
                        height="{{ image.getHeight('bildArtikel') }}" 
                        alt="{{ image.title }}"
                    >
                {% endif %}
            {% endif %}
        {% endfor %}

    </div>

{% endblock %}